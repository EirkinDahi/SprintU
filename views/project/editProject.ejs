<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Project</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/projects/<%= project._id %>?_method=PUT" method="POST">
                <div class="field">
                    <label class="label">Title</label>
                    <div class="control">
                        <input class="input" type="text" name="project[title]" value="<%= project.title%>">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Description</label>
                    <div class="control">
                        <input class="input" type="text" name="project[description]" value="<%= project.description%>">
                    </div>
                </div>
                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link">Submit</button>
                    </div>
                    <div class="control">
                        <button class="button is-link is-light">Cancel</button>
                    </div>
                </div>
            </form>
            <a href="/projects">Go Back</a>
        </div>
    </div>
</div>
</html>