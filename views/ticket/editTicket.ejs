<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= ticket.title%></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/editTicket/<%= ticket._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="ticket[title]" value="<%= ticket.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="ticket[ticketCreator]" value="<%= ticket.ticketCreator %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="ticket[description]" value="<%= ticket.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="ticket[category]" value="<%= ticket.category %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="ticket[points]" value="<%= ticket.points %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="ticket[lane]" value="<%= ticket.lane %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="ticket[assignedUser]" value="<%= ticket.assignedUser %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/backlog">Go Back</a>
        </div>
    </div>
<div/>
