<%- include("../partials/header") %>

    <div class="container">
            <div class="row">
                <h1 style="text-align: center;">Edit</h1>
                <div style="width: 30%; margin: 25px auto">
                    <form action="/ticket/<%= ticket._id %>?_method=PUT" method="POST">
                        <div class="field">
                            <label class="label">Title</label>
                            <div class="control">
                                <input class="input" type="text" name="ticket[title]" value="<%= ticket.title %>">
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Description</label>
                            <div class="control">
                                <input class="input input" type="text" name="ticket[description]" value="<%= ticket.description %>">
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Category</label>
                            <div class="control">
                                <input class="input" type="text" name="ticket[category]" value="<%= ticket.category %>">
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Points</label>
                            <div class="control">
                                <input class="input" type="number" name="ticket[points]" value="<%= ticket.points %>">
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Lane</label>
                            <div class="control">
                                <div class="select">
                                    <select name="ticket[lane]">
                                        <option><%= ticket.lane %></option>
                                        <option>Backlog</option>
                                        <option>To do</option>
                                        <option>In Progress</option>
                                        <option>Review</option>
                                        <option>Testing</option>
                                        <option>Done</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Assigned User</label>
                            <div class="control">
                                <input class="input" type="text" name="ticket[assignedUser]" value="<%= ticket.assignedUser %>">
                            </div>
                        </div>
                        <div class="field is-grouped">
                            <div class="control">
                                <button class="button is-link">Submit</button>
                            </div>
                            <div class="control">
                                <button class="button is-link is-light">Cancel</button>
                            </div>
                        </div>
                    </form>
                    <a href="/backlog">Go Back</a>
                </div>
            </div>
        </div>

</html>